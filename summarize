# :command.usage
summarize_usage() {
  if [[ -n $long_usage ]]; then
    printf "summarize - A tool to deploy models to AWS Sagemaker and query its associated endpoints for inference. Place desired input in bash_cli/corpus.txt. Result will be stored in output_file.txt in base directory.\n"
    echo

  else
    printf "summarize - A tool to deploy models to AWS Sagemaker and query its associated endpoints for inference. Place desired input in bash_cli/corpus.txt. Result will be stored in output_file.txt in base directory.\n"
    echo

  fi

  printf "%s\n" "Usage:"
  printf "  summarize COMMAND\n"
  printf "  summarize [COMMAND] --help | -h\n"
  printf "  summarize --version | -v\n"
  echo
  # :command.usage_commands
  printf "%s\n" "Commands:"
  printf "  %s   Deploy summarization model to AWS Sagemaker from Hugging Face. Tool uses pegasus-xsum (huggingface.co/google/pegasus-xsum) by default\n" "deploy "
  printf "  %s   Send query from input given in bash_cli/corpus.txt file to model's endpoint and return result in output_file.txt\n" "query  "
  printf "  %s   Remove all running resources from AWS Sagemaker. Delete endpoint, endpoint configuration, and model\n" "remove "
  printf "  %s   Regenerate configuration files in case tool stops working\n" "restore"
  echo

  # :command.long_usage
  if [[ -n $long_usage ]]; then
    printf "%s\n" "Options:"

    # :command.usage_fixed_flags
    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "--version, -v"
    printf "    Show version number\n"
    echo

  fi
}

